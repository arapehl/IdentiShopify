{
  "manifest_version": 2,

  "name": "IdentiShopify",
  "description": "Shows an icon in the address bar when on a Shopify store with currency, country and shipping info on click.",
  "version": "1.3",
  "icons": {
    "256": "images/shopify-logo-256.png",
    "128": "images/shopify-logo-128.png",
    "64": "images/shopify-logo-64.png",
    "48": "images/shopify-logo-48.png",
    "32": "images/shopify-logo-32.png",
    "16": "images/shopify-logo-16.png"
  },

  "background": {
    "page": "popup.html"
  },

  "page_action": {
    "default_title": "ShopIdentify",
    "default_popup": "popup.html"
  },

  "permissions": [
    "tabs",
    "activeTab",
    "cookies",
    "http://*/",
    "https://*/"
  ]
}
